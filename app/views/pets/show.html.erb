<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @pet.name %>
</p>

<p>
  <strong>Race:</strong>
  <%= @pet.race %>
</p>

<p>
  <strong>Birthdate:</strong>
  <%= @pet.birthdate %>
</p>

<p>
   <% @pet.pet_histories.each_with_index do |data, i| %>
     <p>
       <%= "<strong>Historia #{i+1}:</strong>".html_safe %>
       <%= data.weight %> kg -
       <%= data.height%> cm
     </p>
   <% end %>
 </p>


<table>
  <thead>
    <tr>
      <th>Peso promedio</th>
      <th>Altura promedio</th>
      <th>Peso Máximo</th>
      <th>Altura Máxima</th>
    </tr>
  </thead>

  <tbody>
    <tr>
      <td><%= @pet.avg_weight %></td>
      <td><%= @pet.avg_height %></td>
      <td><%= @pet.max_weight %></td>
      <td><%= @pet.max_height%></td>
    </tr>
  </tbody>
</table>

<%= link_to 'Add History', pet_pet_histories_path(@pet) %> |
<%= link_to 'Edit', edit_pet_path(@pet) %> |
<%= link_to 'Back', client_pets_path(@pet.client_id), class: 'btn btn-primary' %>
